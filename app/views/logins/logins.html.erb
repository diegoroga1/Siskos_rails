            <a href="/" class="brand-logo"><img class="siskos-logo" src="/assets/siskos.png"></a>
            
            <ul id="items-menu" class="right ">
		<% if session[:client_id].nil? %>
                	<li id="register" class="waves-effect waves-teal btn">
